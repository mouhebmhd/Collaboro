        <div class=" container-fluid main-panel" id=main-panel-home >
          <div class="content-wrapper" id="main-panel-wrapper">
            <div class="row d-flex justify-content-between ">
                <h3 class="text jrnlObs">Journal des risques</h3>              
                <button class="btn add-button mr-3 text-light" onclick="addNewRisk(event)" id="<%=projet._id%>">Nouveau risque<i class="bi bi-plus ml-1 "></i></button>
            </div>
         <!--Second row start-->
            <div class="row mt-2 " >
                <div class="col  p-2 mr-1 projectInfosContainer">
                    <p class="idProject font-weight-bold ">Titre de  projet  </p>
                    <p id="projectId"><%=projet.titre%></p>
                </div>
                <div class="col  p-2 mr-1  projectInfosContainer">
                    <p class="issuesCount text-danger font-weight-bold ">Nombre de risques déclarés </p>
                    <p id="risqueCount"><%=risks.length%></p>
                </div>
                <div class="col  p-2 projectInfosContainer mr-1">
                    <p class="issuesCount font-weight-bold text-success">Moyenne par jour</p>
                    <p id="avgRisqueCount"><%=risks.length/avg.length%>  déclaration par Jour</p>
                </div>
               
            </div>
            <div class="row mt-2">
                <table class="table issuesList bg-white">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Description</th>
                        <th scope="col">Déclaré par</th>
                        <th scope="col">Date de  déclaration</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody class="risksList">
                      <%if(risks.length>0)
                      for(var i=0;i<risks.length;i++) 
                      {%>
                        <tr class="riskItem">
                          <th scope="row"><%=i+1%></th>
                          <td><input type=text class="form-control description d-none" value="<%=risks[i].description%>"><span class=""><%=risks[i].description%></span></td>
                          <td><%=personalData[i].nom%> <%=personalData[i].prenom%></td>
                          <td class="dateDeclaration"><%=risks[i].dateDeclaration%></td>
                          <td class="issuesTools">
                            <button type="button" class="btn  btn-outline-primary d-none updateIssue mr-1 " onclick="updateRisk(event)" id="<%=risks[i]._id%>"><i class="bi bi-check-lg"></i></button>
                              <button type="button" class="btn btn-outline-warning modifyIssue mr-1 text-warning <%if(risks[i].declaredBY!=data._id){%>d-none<%}%>" onclick="modifyRisk(event)" id="<%=risks[i]._id%>"><i class="bi bi-gear"></i></button>
                              <button type="button" class="btn  btn-outline-danger deleteIssue mr-1 text-danger <%if(risks[i].declaredBY!=data._id){%>d-none<%}%>" onclick="deleteRisk(event)" id="<%=risks[i]._id%>"><i class="bi bi-trash"></i></button>
                          </td>
                        </tr>
                      <%}%>
                      <tr class="riskModel d-none">
                        <th scope="row"></th>
                        <td><input type=text class="form-control description" placeholder="Description de risque"></td>
                        <td><%=data.prenom%> <%=data.nom%></td>
                        <td class=""><%=date%></td>
                        <td class="issuesTools">
                            <button type="button" class="btn btn-secondary saveRisk mr-1 " id="<%=projet._id%>" onclick="saveNewRisk(event)">Créer<i class="bi bi-pen ml-2"></i></button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
