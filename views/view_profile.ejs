        <div class=" container-fluid main-panel" id=main-panel-home >
          <div class="content-wrapper" id="main-panel-wrapper">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <div class="form-group row ">
                        <div class=" col-sm-12 d-flex justify-content-center">
                          <div class=" photoBackground  mt-2" style="background-image:url('<%=user.photo%>');background-size: contain;background-repeat: no-repeat;background-color: transparent;">
                          </div>
                        </div>
                        <div class="col text-center mt-2">
                          <a class="btn btn-primary text-light" href="/chat">Envoyer un message<i class="bi bi-envelope ml-1"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row contactDataContainer bg-white d-flex p-2 flex-column">
                <div class="col">
                    <p class="persoTitle">Contact</p>
                </div>
                <div class="col d-flex ">
                    <div class="col-4">
                        <i class="bi bi-envelope text-danger mr-2"></i><%=user.email%>
                    </div>
                    <div class="col-4">
                        <i class="bi bi-telephone text-success mr-2"></i><%=user.telephone%>
                    </div>
                    <div class="col-4">
                        <i class="bi bi-linkedin text-info mr-2"></i><%=user.linkedin%>           
                      </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4 col-sm-12 bg-white p-2 PersonalDataContainer d-flex flex-column">
                    <div class="col text-left">
                        <p class="persoTitle">Informations personnels</p>
                    </div>
                    <div class="col">
                        <p class="font-weight-bold">Nom et Prénom </p>
                        <p><%=user.nom%> <%=user.prenom%></p>
                    </div>
                    <div class="col">
                        <p class="font-weight-bold">Genre </p>
                        <p><%=user.genre%></p>
                    </div>
                    <div class="col">
                        <p class="font-weight-bold">Date de naissance </p>
                        <p><%=user.jourNaissance%>-<%=user.moisNaissance%>-<%=user.anneeNaissance%></p>
                    </div>
                    <div class="col">
                        <p class="font-weight-bold">Adresse </p>
                        <p><%=user.ville%> <%=user.codePostale%> <%=user.pays%></p>
                    </div>
                </div>
                <div class="col ml-2  p-2 bg-white SchoolDataContainer d-flex flex-column justify-content-start">
                    <div class="col text-left">
                        <p class="persoTitle">Certificats et Formations</p>
                    </div>
                    <div class="col mt-0 p-0 m-0">
                      <%if(studies.length==0)
                      {%>
                        <div class="col text-center  PageTitle h3">Aucune information à afficher.</div>
                      <%}else{%>
                        <table class="table m-0 p-0  ">
                            <thead class="">
                                <th>Certificat</th>
                                <th>Description</th>
                                <th>Institut</th>
                                <th>Année</th>
                                <th>Domaine</th>
                            </thead>
                            <tbody>
                              <%for(var c=0;c<studies.length;c++)
                                {%>
                                  <tr>
                                    <td><%=studies[c].certificat%></td>
                                    <td><%=studies[c].description%></td>
                                    <td><%=studies[c].institut%></td>
                                    <td><%=studies[c].annee%></td>
                                    <td><%=studies[c].domaine%></td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table><%}%>
                    </div>
                </div>
                <div class="col-12 bg-white skillsDataContainer d-flex flex-column p-2  mt-2">
                    <div class="col-12 ">
                        <div><p class="persoTitle">Compétences</p></div>
                        <div class="skills d-flex justify-content-around">
                          <%if(skills.length>0)
                          {
                            for(var i=0; i<skills.length; i++)
                            {%>
                            <h6 class="alert alert-primary"><%=skills[i].description%></h6>
                            <%}}
                          else
                          {%>
                            <h6 class="alert alert-danger">Aucune informations à afficher.</h6>
                          <%}%>
                            
                        </div>
                    </div>
                </div>
            </div>

