            <%if(developers.length==0)
            {%>
              <div class="row d-flex  flex-column p-1 mt-2 ">
                <div class="container-fluid text-center mt-2 noNotificationsMessage h3">L'équipe de développement est encore vide! </div>
              </div>
            <%}%>
            <div class="row mt-2 d-flex justify-content-around">
              <%if(developers.length>0){
              for(var i=0;i<developers.length;i++)
              {%>
                <div class="card   mb-1 p-2 team-member-card shadow-sm" style="width: 18rem;">
                  <div class="card-head d-flex justify-content-between ">
                      <button  type="button" class="btn text-warning updateMember" id="<%=personalData[i]._id%>&<%=projet.id%>"><i class="bi bi-tools"></i></button>
                      <button  type="button" class="btn text-success makeTechLead" id="<%=personalData[i]._id%>&<%=projet.id%>" onclick="makeTechLead(event)"><i class="bi  <%if(developers[i].isTechLead=='true'){%>bi-star-fill<%}else{%>bi-star<%}%>"></i></button>
                      <button  type="button" class="btn text-success saveUpdateMember d-none" id="<%=personalData[i]._id%>&<%=projet.id%>"><i class="bi bi-check-all h5"></i></button>
                      <button  type="button" class="btn  text-danger deleteMember" id="<%=personalData[i]._id%>&<%=projet.id%>"><i class="bi bi-eraser"></i></button>
                  </div>
                  <div class="d-flex justify-content-center">
                       <img src="<%=personalData[i].photo%>" class="card-img-top team-card-img" alt="...">
                  </div>
                  <div class="card-body d-flex justify-content-center flex-column align-items-center">
                    <h5 class="card-title "><%=personalData[i].prenom%> <%=personalData[i].nom%></h5>
                    <p class="card-text alert rolename alert-primary  text-center memberOldRole" ><%=developers[i].roleMembre%></p>
                    <%if(developers[i].isTechLead=='true'){%>
                      <p class="card-text alert alert-success  text-center" >Chef technique</p>  
                    <%}%> 
