      <div class=" container-fluid main-panel " id="main-panel-home">
        <div class="content-wrapper " id="main-panel-wrapper">
          <!--First row start-->
          <%if(personas)
          {%>
          <div class="row mt-2">
            <div class="col-md-6 col-sm-12 h5 ml-3 m-md-0 m-sm-2  p-0">
              <span class="text-dark">Titre de Projet :</span> <span class="PageTitle"> <%=projet.titre%></span>
            </div>
            <div class="col-md-6 col-sm-12 d-flex justify-content-end">
              <a type="button" href="/api/persona/update/<%=personas._id%>&<%=projet.titre%>" class="btn btn-warning text-light mr-2 <%=isPO%>">Modifier<i
                  class="bi bi-person-check ml-2 "></i></a>
              <button type="button" class="btn btn-danger deletePersona text-light mr-2 <%=isPO%>" id="<%=personas._id%>">Supprimer<i
                  class="bi bi-person-x ml-2 "></i></button>
            </div>
          </div>
          <div class="row my-2 mx-0">
            <div class=" col-md-4 col-sm-12 p-2 projectInfosContainer d-flex flex-column justify-content-around">
              <div class="form-group row ">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">Nom et Prénom</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.nom%>
                </div>
              </div>
              <div class="form-group row mt-0">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">Genre</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.genre%>
                </div>
              </div>
              <div class="form-group row mt-0">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">Age</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.age%>
                </div>
              </div>
              <div class="form-group row mt-0">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">Profession</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.profession%>
                </div>
              </div>
              <div class="form-group row mt-0">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">Adresse de résidence</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.adresse%>
                </div>
              </div>
              <div class="form-group row mt-0">
                <div class="col-sm-12 ">
                  <label for="name" class="font-weight-bold">État civile:</label>
                </div>
                <div class="col-sm-12 m-auto">
                  <%=personas.status%>
                </div>
              </div>
            </div>
            <div class=" col   ml-2  mt-md-0 mt-sm-2  p-2  projectInfosContainer d-flex justify-content-between">
              <div class="col-3 d-flex align-items-center justify-content-center ">
                <button type="button" class="btn  d-none previousAvatar"><i
                    class="bi bi-chevron-bar-left h1"></i></button>
              </div>
              <div class="col-6  avatarContainer  p-1" style="background-image: url('<%=personas.photo%>');">
              </div>
              <div class="col-3 d-flex align-items-center justify-content-center ">
                <button type="button" class="btn d-none nextAvatar"><i class="bi bi-chevron-bar-right h1"></i></button>
              </div>
            </div>
          </div>
          <div class="row my-2 mx-0">
            <div class="col projectInfosContainer d-flex flex-column p-2 mx-1">
              <div class="col font-weight-bold">Description</div>
              <div class="col">
                <p><%=personas.description%></p>
              </div>
            </div>
            <div class="col projectInfosContainer d-flex flex-column p-2 mx-1">
              <div class="col font-weight-bold">Objectifs</div>
              <div class="col">
                <p><%=personas.objectifs%></p>
              </div>
            </div>
            <div class="col projectInfosContainer d-flex flex-column p-2 mx-1">
              <div class="col font-weight-bold">Environnement</div>
              <div class="col">
                <p><%=personas.environnement%></p>
              </div>
            </div>

          </div>
          <%}
          else
          {%>
            <div class="row d-flex  flex-column p-1 mt-2 ">
              <div class="container-fluid text-center mt-2 noNotificationsMessage h3">Ce projet n'a pas encore une persona !</div>
              <div class="container-fluid text-center mt-2 noNotificationsMessage h3 <%=isPO%>"><a type="button" class="btn btn-primary" href="/api/personas/create/<%=projet._id%>">Créer une nouvelle persona <i class="bi bi-person-plus"></i></a></div>
            </div>
          <%}
          %>



