                            <th>Date Fin</th>
                            <th>Estimation</th>                            
                            <th>Statut</th>

                      </thead>
                      <tbody>
                        <%for (var j=0;j<tasks.length;j++)
                        {
                          if(tasks[j].statut=='terminé' || tasks[j].statut=='abandonné' )
                          {%>
                            <tr>
                              <td><%=j+1%></td>
                              <td><%=tasks[j].description%></td>
                              <td><%=tasks[j].dateFin%></td>
                              <td><%=tasks[j].estimation%></td>
                              <td class="<%if(tasks[j].statut=='terminé'){%>text-success<%}else{%>text-danger<%}%>"><%=tasks[j].statut%></td>
                            </tr>
                          <%}
                        }
                        %>
                      </tbody>
                    </table>
                  </div>
                </div>
