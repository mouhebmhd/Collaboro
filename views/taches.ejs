            </div>
            <!--First row start-->
            
            <!--first row end -->
         <!--Second row start-->
            <div class="row mt-2 " id="tasks-grid">
              <div class="card col-12 my-2 tasks-grid">
                <div class="card-body">
                  <h4 class="card-title">En Attente</h4>
                  <div class="table-responsive">
                    <table class="table ">
                      <thead>
                            <th>Numéro</th>
                            <th>Tâche</th>
                            <th>date début</th>
                            <th>Statut</th>
                            <th>Affecté à</th>
                            <th>Estimation</th>
                            <th>Actions</th>
                      </thead>
                      <tbody>
                        <%for (var i=0;i<tasks.length;i++)
                        {
                          if(tasks[i].statut=='En attente')
                          {%>
                            <tr>
                              <td><%=i+1%></td>
                              <td><%=tasks[i].description%></td>
                              <td>---</td>
                              <td class="text-info">En attente</td>
                              <td><%=data.nom%> <%=data.prenom%></td>
                              <td><%=tasks[i].estimation%></td>
                              <td>
                                <a   type="button" class="btn btn-outline-danger delete-task-button text-danger " id="<%=tasks[i]._id%>" onclick="abandonTask(event)" ><i class="bi bi-trash"></i></a>
                                <a   type="button" class="btn btn-outline-success done-task-button text-success" id="<%=tasks[i]._id%>" onclick="terminateTask(event)"><i class="bi bi-check-lg"></i></a>
                                <a   type="button" class="btn btn-outline-violet take-task-button" id="<%=tasks[i]._id%>" onclick="launchTask(event)" data-toggle="modal" data-target="#exampleModal"><i class="bi bi-hourglass" ></i></a>
                              </td>
                            </tr>
                          <%}
                        }
                        %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="card col-12 my-2 tasks-grid">
                <div class="card-body">
                  <h4 class="card-title">En progression</h4>
