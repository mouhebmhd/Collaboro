                      <thead>
                            <th>Numéro</th>
                            <th>Tâche</th>
                            <th>Statut</th>
                            <th>Date Début</th>
                            <th>Estimation</th>
                            <th>Actions</th>
                      </thead>
                      <tbody>
                        <%for (var j=0;j<tasks.length;j++)
                        {
                          if(tasks[j].statut=='En cours')
                          {%>
                            <tr>
                              <td><%=j+1%></td>
                              <td><%=tasks[j].description%></td>
                              <td class="text-warning">En cours</td>
                              <td>date debut</td>
                              <td><%=tasks[j].estimation%></td>
                              <td>
                                <a  type="button" class="btn btn-outline-danger delete-task-button text-danger " id="<%=tasks[j]._id%>" onclick="abandonTask(event)"><i class="bi bi-trash"></i></a>
                                <a   type="button" class="btn btn-outline-success done-task-button text-success" id="<%=tasks[j]._id%>" onclick="terminateTask(event)"><i class="bi bi-check-lg"></i></a>
                              </td>
                            </tr>
                          <%}
                        }
                        %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="card col-12 tasks-grid my-2">
