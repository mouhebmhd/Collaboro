              <div class="modal-content">
                <div class="modal-body">
                  <div class="row justify-content-center">
                    <div class="d-flex justify-content-center notificationImageContainer align-items-center h4"><i class="bi bi-envelope text-light"></i></div>
                  </div>
                  <div class="row">
                    <div class="col ">De  <input type="text" class="form-control" readonly value="<%=data.email%>"></div>
                  </div>
                  <div class="row mt-2">
                    <div class="col ">Destinataire  
                      <select name="destinataire" id="destinataire" class="form-control">
                        <option >Veuillez sélectionner le destinataire de votre nouvel inMail</option>
                        <%for(var i=0;i<users.length;i++)
                        {%>
                          <option value="<%=users[i].email%>" id="<%=users[i].email%>"><%=users[i].prenom%> <%=users[i].nom%></option>
                       <%}%>
                        </select>
                    </div>
                  </div>
                  <div class="row mt-2">
                    <div class="col ">Objet <input type="text" id="objet" name="objet" class="form-control" placeholder="Veuillez préciser l'objet de votre inMail"></div>
                  </div>
                  <div class="row mt-2">
                    <div class="col ">Message <textarea name="msg" id="msg" class="msgContent form-control" style="height:fit-content;" oninput="auto_grow(this)" placeholder="Veuillez préciser le contenu de votre message"></textarea></div>
                  </div>
                  <div class="row mt-2 justify-content-center">
                    <button class="btn btn-primary" onclick="sendNewInMail()">Envoyer <i class="bi bi-send ml-2"></i></button>
                  </div>
                
                </div>
        
              </div>
            </div>
